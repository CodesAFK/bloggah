<% include ./partials/header %>

<div class="ui main text container">

    <div class="ui huge header">
        Bloggah
    </div>

    <div class="ui top attached segment">
        <div class="ui divided items">
            <% posts.forEach(function(post){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= post.image %>" alt="" height="175px" width="auto">
                    </div>
                    <div class="content">
                        <a class="header" href="/posts/<%= post._id%>"><%= post.title %></a>
                        <div class="meta"><span><%= post.created.toDateString() %></span></div>
                        <div class="description">
                            <%- post.body.substring(0, 150) %>...
                        </div>
                        <div class="extra">
                            <a class="ui floated basic black button" href="/posts/<%= post._id %>">
                                Read More <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<% include ./partials/footer %>